<!--分页模块-->
<div class="row">
    <div class="col-xs-6">
        <div class="dataTables_info" id="example2_info">Page <select ng-model="limitNum" ng-options="x.name as x.value for x in selectPage" ng-change="changeOption()"></select> , total of {{totalItems}} records.</div>
    </div>
    <div class="col-xs-6">
        <div class="dataTables_paginate paging_bootstrap">
            <ul class="pagination">
                <li ng-class="{true:'disabled'}[currentPage==1]"><a href="javascript:void(0);" ng-click="prevPage()">← prev</a></li>
                <li ng-repeat="page in pages" ng-class="{true:'active'}[currentPage==page]"><a href="javascript:void(0);" ng-click="loadPage(page)">{{ page }}</a></li>
                <li ng-class="{true:'disabled'}[currentPage==totalPage]"><a href="javascript:void(0);" ng-click="nextPage()">next → </a></li>
            </ul>
        </div>
    </div>
</div>
